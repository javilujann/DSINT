rule "Taquicardia"
	agenda-group "Reglas_Diagnosticos"
	
    when 
		$p :FrecuenciaCardiacaAlta()
	then 
		Taquicardia d = new Taquicardia($p.getConfianza(),$p);
		insert(d);
end

