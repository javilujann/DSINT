package rule

//list any import classes here.
import elem.ECG
import elem.Ciclo
import diagnosticos.*
import componentes.*
import patrones.*


//declare any global variables here



rule "Frecuencia cardiaca alta"
	agenda-group "Reglas_Patrones"
	
    when 
		$ECG : ECG(frecuenciaCardiaca >= 100)
	then 
		FrecuenciaCardiacaAlta p = new FrecuenciaCardiacaAlta(1,null);
		insert(p);
end

rule "Frecuencia cardiaca baja"
	agenda-group "Reglas_Patrones"
	
    when 
		$ECG : ECG(frecuenciaCardiaca <= 60)
	then 
		FrecuenciaCardiacaBaja p = new FrecuenciaCardiacaBaja(1,null);
		insert(p);
end

rule "Intervalo QT alargado"
	agenda-group "Reglas_Patrones"
	
	when
		$qt : IntervaloQT(duracion>500)
		not (IntervaloQtAlargado())
	then
		IntervaloQtAlargado p = new IntervaloQtAlargado(1,$qt);
		insert(p);
end

rule "Onda T muy Aplanada"
agenda-group "Reglas_Patrones"
	

	when
    	$t : OndaT(amplitud < -14)
    	not  (OndaTMuyAplanada())
	then
    	OndaTMuyAplanada p = new OndaTMuyAplanada(1,$t);
		insert(p);
end

rule "Onda T Aplanada"
agenda-group "Reglas_Patrones"
	
	when
    	$t : OndaT(-14 < amplitud,amplitud < -9)
    	not  (OndaTAplanada())
	then
    	OndaTAplanada p = new OndaTAplanada(1,$t);
		insert(p);
	end

rule "Onda T Hiperaguda"
agenda-group "Reglas_Patrones"
	
	when 
		$t : OndaT(amplitud > 10)
		not (OndaTHiperaguda())
	then 
		OndaTHiperaguda p = new OndaTHiperaguda(1,$t);
		insert(p);
end

rule "Complejo QRS acortado"
agenda-group "Reglas_Patrones"
	
	when
		$c : ComplejoQRS(duracion<90)
		not (ComplejoQrsAcortado())
	then 
		ComplejoQrsAcortado p = new ComplejoQrsAcortado(1,$c);
		insert(p);
end	
			
